# Deploy compiled site to master branch
# because this is user page
#
#!/bin/bash

set -e

cd _site

git config user.email "build@akhyarrh.github.io"
git config user.name "Travis CI"

echo "[View live](https://${GH_USER}.github.io)" > README.md

# add, commit and push files

git add --all
git commit -m "Travis build $TRAVIS_BUILD_NUMBER from commit $TRAVIS_COMMIT"
git push origin master > /dev/null

echo "Done deploying to master"
