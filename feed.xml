---
layout: none
sitemap: false
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" {% if site.lang %}xml:lang="{{ site.lang }}"{% endif %}>
  <link rel="hub" href="http://pubsubhubbub.appspot.com/" />
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
  <link rel="self" href="{{ site.url }}/feed.xml" type="application/atom+xml" />
  <link rel="alternate" href="{{ site.url }}" type="text/html" {% if site.lang %}hreflang="{{ site.lang }}" {% endif %}/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url | xml_escape }}{{ page.url | xml_escape }}</id>
  <title type="html">{{ site.title | smartify | xml_escape }}</title>
  {% if site.description %}<subtitle>{{ site.description | xml_escape }}</subtitle>{% endif %}
  {% if site.author %}<author><name>{{ site.author.name | xml_escape }}</name></author>{% endif %}
  {% for post in site.posts limit: 10 %}
    <entry{% if post.lang %}{{" "}}xml:lang="{{ post.lang }}"{% endif %}>
      {% assign post_title = post.title | smartify | strip_html | normalize_whitespace | xml_escape %}
      <title type="html">{{ post_title }}</title>
      <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post_title }}" />
      <published>{{ post.date | date_to_xmlschema }}</published>
      <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
      <id>{{ post.id | absolute_url | xml_escape }}</id>
      <author><name>{{ site.author.name | xml_escape }}</name></author>
      {% if post.category %}
        <category term="{{ post.category | xml_escape }}" />
      {% elsif post.categories %}
        {% for category in post.categories %}
          <category term="{{ category | xml_escape }}" />
        {% endfor %}
      {% endif %}
      {% for tag in post.tags %}
        <category term="{{ tag | xml_escape }}" />
      {% endfor %}
      {% assign summary = post.content | markdownify | strip_html | newline_to_br | strip_newlines | replace: '<br />', ' ' | escape_once | strip | truncate: 300 %}
        <summary type="html">{{ summary | normalize_whitespace | xml_escape }}</summary>

        {%- assign post_large_image = post.header.og_image | default: post.header.overlay_image | default: post.header.image | absolute_url -%}
        {%- assign post_large_image = post_large_image | escape -%}

        {%- assign post_teaser_image = post.header.teaser | default: site.og_image | absolute_url -%}
        {%- assign post_teaser_image = post_teaser_image | escape -%}

        {% if post_large_image %}
          {% assign post_image = post_large_image %}
        {% elsif post_teaser_image %}
          {% assign post_image = post_teaser_image %}
        {% endif %}

        {% if post_image %}
          <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post_image | xml_escape }}" />
          <media:content medium="image" url="{{ post_image | xml_escape }}" xmlns:media="http://search.yahoo.com/mrss/" />
        {% else %}
          <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="https://cdn.statically.io/og/theme=dark/{{ post.title | default: site.title | markdownify | strip_html | strip_newlines | uri_escape }}.png" />
          <media:content medium="image" url="https://cdn.statically.io/og/theme=dark/{{ page.title | default: site.title | markdownify | strip_html | strip_newlines | uri_escape }}.png" xmlns:media="http://search.yahoo.com/mrss/" />
        {% endif %}
    </entry>
  {% endfor %}
</feed>
